table_num=2
post_functions_with_arg=create_gauge
gaugexml=FreeEMS_AM_SportComp/Load_Percent_260.xml
datasource=LoadMain

[gaugeframe3_1]
keys=post_functions_with_arg,gaugexml,datasource,table_num
table_num=2
post_functions_with_arg=create_gauge
gaugexml=FreeEMS_AM_SportComp/Ignition_Advance.xml
datasource=Advance

[gaugeframe4_1]
keys=post_functions_with_arg,gaugexml,datasource,table_num
table_num=2
post_functions_with_arg=create_gauge
gaugexml=FreeEMS_AM_SportComp/Lambda_Exhaust.xml
datasource=EGO

[gaugeframe5_1]
keys=post_functions_with_arg,gaugexml,datasource,table_num
table_num=2
